// This is your Prisma schema file
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Chatbot {
  id                String         @id @default(uuid())
  name              String
  description       String?
  createdAt         DateTime       @default(now())
  status           String
  conversationsCount Int           @default(0)
  whatsappEnabled   Boolean        @default(false)
  telegramEnabled   Boolean        @default(false)
  language          String?
  personality       String?
  conversations     Conversation[]
  knowledge         Knowledge?
}

model Conversation {
  id         String    @id @default(uuid())
  botId      String
  status     String
  createdAt  DateTime  @default(now())
  channel    String
  messages   Message[]
  bot        Chatbot   @relation(fields: [botId], references: [id])
}

model Message {
  id             String       @id @default(uuid())
  role           String
  content        String
  timestamp      DateTime     @default(now())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id])
}

model Knowledge {
  id        String   @id @default(uuid())
  files     String   // JSON string array
  urls      String   // JSON string array
  faqs      String   // JSON string array
  text      String
  chatbotId String   @unique
  chatbot   Chatbot  @relation(fields: [chatbotId], references: [id])
}